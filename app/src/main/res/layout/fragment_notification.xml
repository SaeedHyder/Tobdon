<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <com.app.tobdon.ui.views.AnyTextView
            android:id="@+id/txt_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_notification_found"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x14"
            android:visibility="gone"
            app:typeface="@string/font_normal"

            />

        <com.app.tobdon.ui.views.AnyTextView
            android:id="@+id/txtJustNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/view_line_color_3"
            android:gravity="start"
            android:paddingBottom="@dimen/x5"
            android:paddingStart="@dimen/x15"
            android:paddingTop="@dimen/x5"
            android:text="@string/just_now"
            android:textColor="@color/app_dark_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"

            />

        <com.app.tobdon.ui.views.CustomRecyclerView
            android:id="@+id/rv_notification_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            />

        <com.app.tobdon.ui.views.AnyTextView
            android:id="@+id/txtEarlier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/view_line_color_3"
            android:gravity="start"
            android:paddingBottom="@dimen/x5"
            android:paddingStart="@dimen/x15"
            android:paddingTop="@dimen/x5"
            android:text="@string/earlier"
            android:textColor="@color/app_dark_gray"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal"

            />

        <com.app.tobdon.ui.views.CustomRecyclerView
            android:id="@+id/rv_notification_earlier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
           />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>