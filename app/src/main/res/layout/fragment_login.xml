<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/x20"
        android:paddingStart="@dimen/x20">

        <ImageView
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginBottom="@dimen/x30"
            android:background="@color/app_brown" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/app_brown"
         >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/email_or_mobile_no"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:textColorHint="@color/app_brown">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x14" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/view_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center"
            android:orientation="horizontal">

            <com.app.tobdon.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/btnResetNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:text="@string/reset_now"
                android:textColor="@color/app_red"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button_brown"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />

        <com.app.tobdon.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15"
            android:gravity="center"
            android:text="@string/or"
            android:textColor="@color/app_black_text"
            android:textSize="@dimen/x14"
            app:typeface="@string/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fbButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/x45"
                android:layout_marginEnd="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/button_fb"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />

            <Button
                android:id="@+id/instaButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/x45"
                android:layout_marginStart="@dimen/x3"
                android:layout_weight="1"
                android:background="@drawable/button_brown"
                android:text="Instagram"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center"
            android:orientation="horizontal">

            <com.app.tobdon.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_to_tobdon"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/btnSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:text="@string/sign_up_now"
                android:textColor="@color/app_red"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>