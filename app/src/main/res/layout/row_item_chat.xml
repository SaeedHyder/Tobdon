            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/x5"
            android:layout_marginStart="@dimen/x8"
            android:background="@drawable/chat_left_item"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdadasdasdasdasd"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x12"
                android:visibility="visible"
                app:typeface="@string/font_normal" />

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/txt_left_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x2"
                android:text="12 Dec,2019 - 12:30 am"
                android:textColor="@color/profile_gray"
                android:textSize="@dimen/x10"
                android:visibility="visible"
                app:typeface="@string/font_normal" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_image_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginEnd="@dimen/x80"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginTop="@dimen/x3"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/x10"
            app:cardElevation="@dimen/x2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_image_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder_thumb" />

                <com.app.tobdon.ui.views.AnyTextView
                    android:id="@+id/txt_left_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x40"
                    android:background="@drawable/circle_placeholder"
                    android:gravity="center"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x25"
                    android:textStyle="bold"
                    app:typeface="@string/font_bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_image_left"

                    android:orientation="vertical">

                    <com.app.tobdon.ui.views.AnyTextView
                        android:id="@+id/txt_image_message_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:layout_marginStart="@dimen/x5"
                        android:layout_marginTop="@dimen/x5"
                        android:text="@string/lorem_small"
                        android:textColor="@color/app_black_text"
                        android:textSize="@dimen/x12"
                        app:typeface="@string/font_normal" />

                    <com.app.tobdon.ui.views.AnyTextView
                        android:id="@+id/txt_image_date_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5"
                        android:text="12 Dec,2019 "
                        android:textColor="@color/profile_gray"
                        android:textSize="@dimen/x10"
                        app:typeface="@string/font_normal" />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

