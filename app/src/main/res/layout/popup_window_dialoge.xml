<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginBottom="@dimen/x4"
        app:cardCornerRadius="@dimen/x3"
        app:cardElevation="@dimen/x5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x5"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingTop="@dimen/x5">

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/txt_HidePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x7"
                android:text="Hide Post"
                android:textColor="@color/app_black_text"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="@dimen/x210"
                android:layout_height="@dimen/x1"
                android:alpha="0.4"
                android:background="@color/view_line_color" />

            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/txt_HideAllPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x7"
                android:text="Hide all posts by this user"
                android:textColor="@color/app_black_text"
                app:typeface="@string/font_normal" />

            <View
                android:layout_width="@dimen/x210"
                android:layout_height="@dimen/x1"
                android:alpha="0.4"
                android:background="@color/view_line_color" />


            <com.app.tobdon.ui.views.AnyTextView
                android:id="@+id/txt_turnOffNotificaitons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/x7"
                android:text="Turn off notificaiton for this post"
                android:textColor="@color/app_black_text"
                app:typeface="@string/font_normal" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>