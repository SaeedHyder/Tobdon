<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x280"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:orientation="vertical">

        <com.app.tobdon.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:alpha="0.7"
            android:gravity="center"
            android:text="@string/upload_photo"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:typeface="@string/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.2"
            android:background="@color/grey" />


        <com.app.tobdon.ui.views.AnyTextView
            android:id="@+id/txt_logout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:alpha="0.7"
            android:gravity="center"
            android:text="@string/how_do_you_want_to_set_your_photo"
            android:textColor="@color/black"
            android:textSize="@dimen/x17"
            app:typeface="@string/font_normal" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.2"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginRight="@dimen/x7"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/camera"
            android:textAllCaps="false"
            android:textColor="@color/app_brown"
            android:textSize="@dimen/x16" />


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="fill_parent"
            android:alpha="0.1"
            android:background="@color/gray_dark" />


        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x7"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/gallery"
            android:textAllCaps="false"
            android:textColor="@color/app_brown"
            android:textSize="@dimen/x16" />


    </LinearLayout>

</LinearLayout>