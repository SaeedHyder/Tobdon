<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/app_brown</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>


    <style name="TextLable" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/app_brown</item>
        <item name="colorAccent">@color/app_brown</item>

        <item name="android:textSize">@dimen/x14</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/x10</item>
        <item name="textAllCaps">false</item>

    </style>

</resources>